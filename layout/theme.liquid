<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

    <script src="{{ 'jquery.min.js' | asset_url }}" defer></script>
    <script src="{{ 'application.js' | asset_url }}" defer></script>
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    <style>
      {{ settings.body_font | font_face }}:root {
        --bodyFont: {{ settings.body_font.family }}
        ;
        --bodyFontWeight: {{ settings.body_font.weight }}
        ;
      }
    </style>

    {{ 'application.css' | asset_url | stylesheet_tag }}
  </head>
  <body>

    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}

      {% section 'footer' %}
    </main>

    {% if template != 'cart' %}
      {% render 'mini-cart' %}
    {% endif %}

  </body>
</html>